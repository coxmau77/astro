---
// import type { string } from "astro:schema";

interface Props {
  userNameCard: string;
  bodyCard: string;
  hrefSocial: string;
  titleLink: string;
  imgProfileCard: string;
  userEmail: string;
}

const {
  userNameCard,
  bodyCard,
  hrefSocial,
  titleLink,
  imgProfileCard,
  userEmail,
} = Astro.props;
---

<li
  class="max-w-sm rounded my-3 overflow-hidden shadow-lg bg-white dark:bg-gray-800"
>
  <div class="flex items-center p-4">
    <img
      class="w-10 h-10 rounded-full mr-4 dark:bg-gray-900"
      src={imgProfileCard}
      alt="Avatar default img"
    />
    <div class="text-sm">
      <!-- Clases para texto que cambia en modo oscuro -->
      <h3
        class="text-gray-600 dark:text-gray-300 leading-none font-bold text-base"
      >
        {userNameCard}
      </h3>
      <p
        class="text-gray-700 sm:text-xs fontZise/xs dark:text-gray-400 leading-none"
      >
        {userEmail}
      </p>
      <p class="text-gray-600 dark:text-gray-300">{bodyCard}</p>
      <div class="flex justify-end mt-2">
        <a
          class="link-style w-6 h-6 rounded-full bg-slate-950"
          href={hrefSocial}
          target="_blank"
          rel="noopener noreferrer"
          title={titleLink}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="bi bi-github"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</li>
