---
interface Props {
  userName: string;
  userEmail: string;
  userImg: string;
  brandName: string;
  iconBrand: string;
}

const { userName, userEmail, userImg, brandName, iconBrand } = Astro.props;
---

<header class="flex justify-between items-center bg-white/10 p-4">
  <a href="./">
    <span
      title="company name"
      class="flex items-center text-slate-300 font-bold text-xl"
    >
      <img
        class="w-10 h-10 rounded-full mr-2 dark:bg-slate-950 p-1"
        src={iconBrand}
        alt="icon"
      />
      {brandName}
    </span>
  </a>
  <section class="text-gray-800 dark:text-white">
    <div class="flex items-center">
      <div class="text-sm text-right">
        <!-- Clases para texto que cambia en modo oscuro -->
        <h3 class="text-gray-600 dark:text-gray-300 leading-none">
          {userName}
        </h3>
        <p
          class="text-gray-600 sm:text-xs fontZise/xs dark:text-gray-400 leading-none"
        >
          {userEmail}
        </p>
      </div>

      <img
        class="w-10 h-10 rounded-full mx-2 dark:bg-gray-900"
        src={userImg}
        alt="Avatar default img"
      />

      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-10 h-10 p-2 rounded-full dark:bg-slate-950"
        data-darklight
      >
        <path
          d="M12 .75a8.25 8.25 0 0 0-4.135 15.39c.686.398 1.115 1.008 1.134 1.623a.75.75 0 0 0 .577.706c.352.083.71.148 1.074.195.323.041.6-.218.6-.544v-4.661a6.714 6.714 0 0 1-.937-.171.75.75 0 1 1 .374-1.453 5.261 5.261 0 0 0 2.626 0 .75.75 0 1 1 .374 1.452 6.712 6.712 0 0 1-.937.172v4.66c0 .327.277.586.6.545.364-.047.722-.112 1.074-.195a.75.75 0 0 0 .577-.706c.02-.615.448-1.225 1.134-1.623A8.25 8.25 0 0 0 12 .75Z"
        ></path>
        <path
          fill-rule="evenodd"
          d="M9.013 19.9a.75.75 0 0 1 .877-.597 11.319 11.319 0 0 0 4.22 0 .75.75 0 1 1 .28 1.473 12.819 12.819 0 0 1-4.78 0 .75.75 0 0 1-.597-.876ZM9.754 22.344a.75.75 0 0 1 .824-.668 13.682 13.682 0 0 0 2.844 0 .75.75 0 1 1 .156 1.492 15.156 15.156 0 0 1-3.156 0 .75.75 0 0 1-.668-.824Z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
  </section>
</header>
